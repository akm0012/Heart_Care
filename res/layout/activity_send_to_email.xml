<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:background="@color/notAsLightBlue"
	android:focusable="true"
	android:focusableInTouchMode="true"
    >
    	
	<TextView
        android:id="@+id/sendToInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="@string/sendToInstructionsText"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	<ScrollView
	    android:id="@+id/scrollView"
	    android:background="@color/lightBlue"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:layout_below="@+id/sendToInstructions"
		android:layout_above="@+id/nameField"
		android:layout_marginBottom="5dp"
		android:fadeScrollbars="false"
		>	
		
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"
		    tools:context=".SendToEmail" >

		    <CheckBox
		        android:id="@+id/nameStatic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:layout_marginTop="1dp"
		        android:layout_marginLeft="30dp"
		        android:text="@string/nameColonCAPS"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/nameStaticTextField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/nameStatic"
		        android:layout_alignBottom="@+id/nameStatic"
		        android:layout_toRightOf="@+id/nameStatic"
		        android:layout_marginLeft="5dp"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:text="" />
		    		
		    <CheckBox
		        android:id="@+id/ageStatic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/nameStatic"
		        android:layout_marginLeft="30dp"
		        android:text="@string/ageTextView"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/ageStaticTextField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/ageStatic"
		        android:layout_alignBottom="@+id/ageStatic"
		        android:layout_toRightOf="@+id/ageStatic"
		        android:layout_marginLeft="5dp"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:text="" />
		       
		    <CheckBox
		        android:id="@+id/genderStatic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/ageStatic"
		        android:layout_marginLeft="30dp"
		        android:text="@string/genderTextView"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/genderStaticTextField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/genderStatic"
		        android:layout_alignBottom="@+id/genderStatic"
		        android:layout_toRightOf="@+id/genderStatic"
		        android:layout_marginLeft="5dp"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:text="" />
		    
		    <CheckBox
		        android:id="@+id/cholStatic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/genderStatic"
		        android:layout_marginLeft="30dp"
		        android:text="@string/cholTextView"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/cholStaticTextField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/cholStatic"
		        android:layout_alignBottom="@+id/cholStatic"
		        android:layout_toRightOf="@+id/cholStatic"
		        android:layout_marginLeft="5dp"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:text="" />
		    
		    <CheckBox
		        android:id="@+id/hdlStatic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/cholStatic"
		        android:layout_marginLeft="30dp"
		        android:text="@string/hdlTextView"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/hdlStaticTextField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/hdlStatic"
		        android:layout_alignBottom="@+id/hdlStatic"
		        android:layout_toRightOf="@+id/hdlStatic"
		        android:layout_marginLeft="5dp"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:text="" />
		
		    <CheckBox
		        android:id="@+id/bpStatic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/hdlStatic"
		        android:layout_marginLeft="30dp"
		        android:text="@string/bpTextView"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/bpStaticTextField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/bpStatic"
		        android:layout_alignBottom="@+id/bpStatic"
		        android:layout_toRightOf="@+id/bpStatic"
		        android:layout_marginLeft="5dp"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:text="" />
		    
		    <CheckBox
		        android:id="@+id/smokerStatic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/bpStatic"
		        android:layout_marginLeft="30dp"
		        android:text="@string/smokerStatus"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/smokerStaticTextField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/smokerStatic"
		        android:layout_alignBottom="@+id/smokerStatic"
		        android:layout_toRightOf="@+id/smokerStatic"
		        android:layout_marginLeft="5dp"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:text="" />
		    
		    <CheckBox
		        android:id="@+id/bpMedsStatic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/smokerStatic"
		        android:layout_marginLeft="30dp"
		        android:text="@string/bpStatus"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/bpMedsStaticTextField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/bpMedsStatic"
		        android:layout_alignBottom="@+id/bpMedsStatic"
		        android:layout_toRightOf="@+id/bpMedsStatic"
		        android:layout_marginLeft="5dp"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:text="" />
		    
			<CheckBox
		        android:id="@+id/riskScoreStatic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/bpMedsStatic"
		        android:layout_marginLeft="30dp"
		        android:text="@string/riskScore"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/riskScoreStaticTextField"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/riskScoreStatic"
		        android:layout_alignBottom="@+id/riskScoreStatic"
		        android:layout_toRightOf="@+id/riskScoreStatic"
		        android:layout_marginLeft="5dp"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:text="" />
		    
		
		</RelativeLayout>
		
	</ScrollView>
	
	<TextView
        android:id="@+id/nameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phoneNumberField"
        android:layout_alignLeft="@+id/emailAddrField"
        android:text="@string/nameColon"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameField"
        android:layout_alignBottom="@+id/nameField"
        android:layout_toRightOf="@+id/nameField"
        android:layout_alignLeft="@+id/editEmailAddr"
        android:ems="10"
        android:hint="@string/emailHint"
        android:imeOptions="actionDone"
        android:inputType="text" >

    </EditText>
    
	<TextView
        android:id="@+id/phoneNumberField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailAddrField"
        android:layout_alignLeft="@+id/emailAddrField"
        android:layout_marginTop="5dp"
        android:text="@string/phoneColon"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phoneNumberField"
        android:layout_alignBottom="@+id/phoneNumberField"
        android:layout_toRightOf="@+id/phoneNumberField"
        android:ems="10"
        android:imeOptions="actionDone"
        android:hint="@string/emailHint"
        android:inputType="phone" >

    </EditText>

    <TextView
        android:id="@+id/emailAddrField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailContacts"
        android:layout_alignLeft="@+id/emailContacts"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:text="@string/emailTo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editEmailAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emailAddrField"
        android:layout_alignBottom="@+id/emailAddrField"
        android:layout_alignLeft="@+id/editPhoneNumber"
        android:ems="10"
        android:imeOptions="actionDone"
        android:hint="@string/emailHint"
        android:inputType="textEmailAddress" >

    </EditText>

    <Button
        android:id="@+id/sendEmailButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/emailContacts"
        android:layout_alignRight="@+id/sendToInstructions"
        android:text="@string/emailButton"
        android:onClick="sendEmailPushed" />
    <Button
        android:id="@+id/sendTextButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/emailContacts"
        android:layout_toLeftOf="@+id/sendEmailButton"
        android:text="@string/textButton"
        android:onClick="sendTextPushed" />

    <Button
        android:id="@+id/emailContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:onClick="selectContact"
        android:text="@string/emailContactButton" />
	    
</RelativeLayout>
